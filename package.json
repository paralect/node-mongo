{
  "name": "@paralect/node-mongo",
  "version": "0.3.0",
  "author": "Paralect",
  "description": "MongoDB wrapper for Node.JS 8",
  "private": false,
  "main": "src/index.js",
  "scripts": {
    "test": "run-s test:*",
    "test:eslint": "eslint ./",
    "test:mocha": "NODE_ENV=test mocha --exit --recursive -c -R spec src/index.test.js",
    "coveralls": "istanbul cover _mocha --report lcovonly -- --exit --recursive -R spec src/index.test.js && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "keywords": [
    "mongo",
    "monk",
    "paralect"
  ],
  "license": "MIT",
  "dependencies": {
    "lodash": "4.17.4",
    "monk": "6.0.5"
  },
  "devDependencies": {
    "@paralect/eslint-config": "0.1.4",
    "babel-eslint": "8.0.1",
    "babel-register": "^6.26.0",
    "chai": "4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "4.9.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.4.0",
    "istanbul": "^1.1.0-alpha.1",
    "joi": "^13.0.0",
    "jsonschema": "^1.2.0",
    "mocha": "4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "4.1.1"
  },
  "engines": {
    "node": "~8.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paralect/node-mongo.git"
  }
}
